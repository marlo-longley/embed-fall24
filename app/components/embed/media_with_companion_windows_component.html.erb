<div class="sul-embed-container media-component" id='sul-embed-object' style='display:none;' data-controller="media">
  <header>
    <nav aria-label="Window navigation">
      <button data-action="click->media#toggleLeft">
        <span class="button-label"><svg class="MuiSvgIcon-root" focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path></svg></span>
      </button>
      <h2 class=""><%= viewer.purl_object.title %></h2>
      <button data-action="click->media#displayContents">
        <span class="button-label"><svg class="MuiSvgIcon-root" focusable="false" aria-hidden="true" viewBox="0 0 24 24"><path d="M4 10.5c-.83 0-1.5.67-1.5 1.5s.67 1.5 1.5 1.5 1.5-.67 1.5-1.5-.67-1.5-1.5-1.5zm0-6c-.83 0-1.5.67-1.5 1.5S3.17 7.5 4 7.5 5.5 6.83 5.5 6 4.83 4.5 4 4.5zm0 12c-.83 0-1.5.68-1.5 1.5s.68 1.5 1.5 1.5 1.5-.68 1.5-1.5-.67-1.5-1.5-1.5zM7 19h14v-2H7v2zm0-6h14v-2H7v2zm0-8v2h14V5H7z"></path></svg></span>
      </button>
      <button data-action="click->media#displayDownloads">
        <svg class="MuiSvgIcon-root" focusable="false" aria-hidden="true" viewBox="0 0 24 24"><path d="M5 20h14v-2H5v2zM19 9h-4V3H9v6H5l7 7 7-7z"></path></svg>
      </button>
    </nav>
  </header>

  <div class="media-component-body" data-controller="media-tag">
    <div class="left-drawer collapse" data-media-target="leftDrawer">
      <div class="vertTabs">
        <button data-action="click->media#displayMetadata" data-media-target="leftButton" class="active">
          <svg class="MuiSvgIcon-root" focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"></path></svg>
        </button>
        <button data-action="click->media#displayShare" data-media-target="leftButton">
          <svg class="MuiSvgIcon-root" focusable="false" aria-hidden="true" viewBox="0 0 24 24"><path d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7c.05-.23.09-.46.09-.7s-.04-.47-.09-.7l7.05-4.11c.54.5 1.25.81 2.04.81 1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3c0 .24.04.47.09.7L8.04 9.81C7.5 9.31 6.79 9 6 9c-1.66 0-3 1.34-3 3s1.34 3 3 3c.79 0 1.5-.31 2.04-.81l7.12 4.16c-.05.21-.08.43-.08.65 0 1.61 1.31 2.92 2.92 2.92 1.61 0 2.92-1.31 2.92-2.92s-1.31-2.92-2.92-2.92z"></path></svg>
        </button>
      </div>
      <div class="inner">
        <div data-media-target="metadata" hidden>
          <%= render 'embed/metadata/media_accessibility_note', viewer: viewer %>
        </div>
        <div data-media-target="share" hidden>
          <%= render EmbedThisFormComponent.new(viewer:) %>
        </div>
      </div>
    </div>
    <div class='sul-embed-body sul-embed-media'
      data-sul-embed-theme="<%= stylesheet_path('media.css') %>"
      data-sul-icons="<%= stylesheet_path('sul_icons.css') %>">
      <%= render Embed::MediaTagComponent.with_collection(resources_with_primary_file,
                                                    include_transcripts:,
                                                    druid:,
                                                    many_primary_files:) %>
    </div>
    <%= render 'embed/embed_this/generic', viewer: viewer %>
    <%= render Embed::Download::LegacyMediaComponent.new viewer: viewer %>
    <div class="right-drawer collapse" data-media-target="rightDrawer">
      <div class="inner">
        <div data-media-target="contents" hidden>
          <ul data-media-tag-target="list"></ul>
        </div>
        <div data-media-target="downloads" hidden>
          <ul class='sul-embed-download-list'>
            <%= render Embed::Download::FileListItemComponent.with_collection(viewer.purl_object.downloadable_files) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
 </div>
 <%= javascript_pack_tag('media') %>
